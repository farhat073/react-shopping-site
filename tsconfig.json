{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true
  },
  "include": [
    "./**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "src/",
    "**/*.test.ts"
  ]
}
