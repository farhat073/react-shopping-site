{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./",
    "src/**/*",
    "config/**/*",
    "database/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules/",
    ".strapi/",
    "build/",
    "dist/",
    ".tmp/",
    "src/admin/",
    "src/plugins/**/admin/",
    "src/plugins/**/node_modules/"
  ]
}